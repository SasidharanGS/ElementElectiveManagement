<li class="list-group-item list-item" style="background-color: rgb(96, 96, 96); color: white; border: 1px solid rgb(96, 96, 96)">
    <div style="display: flex; flex-direction: row; align-items: center; justify-content: space-around;">
        <div>
          <p>Student: <b><%= email %></b></p>
          <p>Department: <span class="badge alert-info">
            <%= dept %>
          </span>
          Semester: <span class="badge alert-success">
            <%= sem %>
          </span>
          </p>
          <p>
            Requests to change to <span class="badge alert-warning"><%= courseCode %></span>

          </p>
        </div>
        <div style="display: flex; flex-direction: row; justify-content: space-around;">
            <button type="button" class="btn red-back" id="filterButton" style="align-self: center; background-color: #ff4a44;" onclick="acceptRequest('<%= email %>')" >
                Accept
            </button>
            <div style="width: 50px;"></div>
            <button type="button" class="btn red-back" id="filterButton" style="align-self: center; background-color: #ff4a44;" onclick="rejectRequest('<%= email %>')" >
                Reject
            </button>
        </div>
      </div>      
</li>