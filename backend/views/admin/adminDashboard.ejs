<style>
    body {
        background-image: url('http://localhost:5002/images/background.jpg');
        background-repeat: no-repeat;
        background-size: cover;
    }
</style>
<body>
    <%- include('../utils/nav-bars/adminNavBar.ejs', { active: 'home' }) %>

        <div class="con-row">
            <div class="con-card card1">
                <h4>Make and announcement</h4>
                <br>
                <form action="/admin/makeAnnouncement" method="POST">
                    <textarea name="announcement" id="desc" cols="45" rows="6" placeholder="Announcement!"
                        style="color: rgb(0, 0, 0); resize: none;"></textarea>
                    <br>
                    <button type="submit" class="btn" style="background-color: #ff4a44; margin-top: 15px;">Announce</button>
                </form>
            </div>
            <div class="con-card card2">
                <h4>Announcements</h4>
                <br>
                <div id="announcements">
                    <% for (let i=0; i < announcements.length; i++) { %>
                            <%- include('../utils/announcementTile.ejs', { text: announcements[i].announcement }) %>
                    <% } %>
                    <div class="alert announce-tile" role="alert">
                        This is a danger alert—check it out!
                    </div>
                    <div class="alert announce-tile" role="alert">
                        This is a danger alert—check it out!
                    </div>
                    <div class="alert announce-tile" role="alert">
                        This is a danger alert—check it out!
                    </div>
                </div>
            </div>
        </div>
        </div>
        <div class="con-row">
            <div class="con-card card3">
                <h4>Open Registrations</h4>
                <div class="list-content">
                    <ul class="list-group">
                        <% for (let i=0; i < regis.length; i++) { %>
                                <%- include('../utils/regisTile.ejs', { dept: regis[i].dept, sem: regis[i].sem, startDate: regis[i].startDate, endDate: regis[i].endDate }) %>
                        <% } %>
                    </ul>
                </div>
            </div>
            <div class="con-card card4">
                <h4>Change of electives</h4>
                <div class="list-content">
                    <ul class="list-group">
                        <li class="list-group-item list-item">
                            Nothing here yet
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <script>
            $(document).ready(function () {
                $(".mobile-nav i").click(function () {
                    $(".menu").toggleClass('mobile-menu');
                });
            })
        </script>
</body>